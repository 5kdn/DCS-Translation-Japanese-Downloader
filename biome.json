{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 128
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noVar": "warn"
      },
      "complexity": {
        "noUselessCatch": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "expand": "always"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!.release*",
      "!node_modules",
      "!dist",
      "!src/lib/http/apiClient",
      "!src/assets/LICENSES"
    ]
  }
}
